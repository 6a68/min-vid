env:
  browser: true
  es6: true
  node: true

extends:
  - eslint:recommended

globals:
  unsafeWindow: false

parserOptions:
  ecmaFeatures:
    jsx: true

plugins:
  - react

root: true

rules:
  react/jsx-uses-react: 1
  react/jsx-uses-vars: 1

  eqeqeq: 2
  indent: [2, 2]
  no-unused-vars: [2, {vars: all, args: none}]
  quotes: [2, single, {avoidEscape: true, allowTemplateLiterals: true}]
